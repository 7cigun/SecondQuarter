<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MyChipStyle" parent="Widget.MaterialComponents.Chip.Choice"></style>

    <style name="SecondQuarterStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">?rootColor</item>
        <item name="helperTextEnabled">true</item>
        <item name="counterEnabled">true</item>
        <item name="counterMaxLength">20</item>
        <item name="errorEnabled">true</item>
        <item name="errorTextColor">#FF0303</item>
        <item name="boxStrokeWidthFocused">3dp</item>
    </style>

    <style name="MyStyleFloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="tint">?rootColor</item>
        <item name="rippleColor">?superColor</item>
        <item name="borderWidth">2dp</item>
    </style>

    <style name="MyTabStyle" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabRippleColor">@drawable/my_ripple</item>
        <item name="tabTextAppearance">@style/MyTextAppearance</item>
    </style>

    <style name="MyTextAppearance" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/aguafina_script</item>
        <item name="android:fontFamily">@font/aguafina_script</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.0178571429</item>
    </style>

</resources>