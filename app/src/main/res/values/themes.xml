<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="MyBaseTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">?rootColor</item>
        <item name="colorPrimaryVariant">?superColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">?rootColor</item>
        <item name="colorSecondaryVariant">?superColor</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="textInputStyle">?rootColor</item>
        <item name="floatingActionButtonStyle">@style/MyStyleFloatingActionButton</item>
        <item name="chipStyle">@style/MyChipStyle</item>

        <item name="tabStyle">@style/MyTabStyle</item>

        <item name="textAppearanceBody2">@style/MyTextAppearance</item>

        <item name="shapeAppearanceSmallComponent">@style/MySmallShape</item>
        <item name="shapeAppearanceLargeComponent">@style/MyLargeShape</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SpaceTheme" parent="MyBaseTheme">
        <item name="rootColor">@color/purple_700</item>
        <item name="superColor">@color/blue</item>
    </style>

    <style name="FlowerTheme" parent="MyBaseTheme">
        <item name="rootColor">@color/red_600</item>
        <item name="superColor">@color/red_100</item>
    </style>

    <style name="LimeTheme" parent="MyBaseTheme">
        <item name="rootColor">@color/teal_700</item>
        <item name="superColor">@color/green</item>
    </style>

</resources>